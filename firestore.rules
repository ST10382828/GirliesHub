rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anonymous users to create requests (for GBV reports and general support)
    match /requests/{requestId} {
      allow create: if true; // Anonymous users can create requests
      allow read: if request.auth != null || resource.data.anonymous == true; // Authenticated users or anonymous requests
      allow update: if request.auth != null && (request.auth.uid == resource.data.submittedBy || request.auth.token.admin == true);
      allow delete: if request.auth != null && request.auth.token.admin == true; // Only admins can delete
    }
    
    // GBV reports - allow anonymous creation but restrict reading
    match /gbv_reports/{reportId} {
      allow create: if true; // Anonymous users can create GBV reports
      allow read: if request.auth != null && (request.auth.uid == resource.data.submittedBy || request.auth.token.admin == true);
      allow update: if request.auth != null && (request.auth.uid == resource.data.submittedBy || request.auth.token.admin == true);
      allow delete: if request.auth != null && request.auth.token.admin == true; // Only admins can delete
    }
    
    // User profiles - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.token.admin == true; // Admins can read all users
    }
    
    // Transactions - users can read their own transactions
    match /transactions/{transactionId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Blockchain queue - internal use only
    match /db_chain_queue/{queueId} {
      allow read, write: if false; // Internal service use only
    }
    
    // User roles - admins can read/write, users can read their own
    match /user_roles/{roleId} {
      allow read: if request.auth != null && (request.auth.uid == roleId || request.auth.token.admin == true);
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // System settings - admin only
    match /settings/{settingId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
